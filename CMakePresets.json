{
  "version": 5,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 24,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "x64-Clang-Base-Windows",
      "hidden": true,
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      },
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/Build/${presetName}",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "clang-cl",
        "CMAKE_CXX_COMPILER": "clang-cl"
      },
      "vendor": {
        "microsoft.com/VisualStudioSettings/CMake/1.0": {
          "intelliSenseMode": "windows-clang-x64"
        }
      }
    },
    {
      "name": "x64-Clang-Base-Linux",
      "hidden": true,
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      },
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/Build/${presetName}",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_CXX_COMPILER": "clang++"
      }
    },
    {
      "name": "x64-Clang-Debug",
      "hidden": false,
      "displayName": "Clang x64 Debug",
      "inherits": ["x64-Clang-Base-Linux", "x64-Clang-Base-Windows"],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "x64-Clang-Debug-Qt",
      "displayName": "Clang x64 Debug with Qt",
      "inherits": ["x64-Clang-Base-Linux", "x64-Clang-Base-Windows"],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "ENABLE_QT_GUI": "ON"
      }
    },
    {
      "name": "x64-Clang-Release",
      "displayName": "Clang x64 Release",
      "inherits": ["x64-Clang-Base-Linux", "x64-Clang-Base-Windows"],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "x64-Clang-Release-Qt",
      "displayName": "Clang x64 Release with Qt",
      "inherits": ["x64-Clang-Base-Linux", "x64-Clang-Base-Windows"],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "ENABLE_QT_GUI": "ON"
      }
    },
    {
      "name": "x64-Clang-RelWithDebInfo",
      "displayName": "Clang x64 RelWithDebInfo",
      "inherits": ["x64-Clang-Base-Linux", "x64-Clang-Base-Windows"],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo"
      }
    },
    {
      "name": "x64-Clang-RelWithDebInfo-Qt",
      "displayName": "Clang x64 RelWithDebInfo with Qt",
      "inherits": ["x64-Clang-Base-Linux", "x64-Clang-Base-Windows"],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo",
        "ENABLE_QT_GUI": "ON"
      }
    }
  ]
}
